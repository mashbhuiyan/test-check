<div class="form-wrapper py-5 my-3 bg-light">
    <form action="/partners/create" method="POST" class="mx-auto border p-5 my-3 form-content"
          style="width: 60%; background-color: #ffffff; border-radius: 5px; box-shadow: 0px 0px 5px #f1f1f1;">
        <% if (error) { %>
            <div class="error" style="color: red;">
                <p>
                    <%= error %>
                </p>
            </div>
        <% } %>
        <div class="mb-3">
            <label for="partner_name"> Name </label>
            <input type="text" id="partner_name" value="<%= partner.name %>" name="name" class="form-control my-2" required>
        </div>
        <div class="mb-3">
            <label for="partner_email"> Email </label>
            <input type="email" id="partner_email" value="<%= partner.email %>" name="email" class="form-control my-2">
        </div>
        <div class="mb-3">
            <label for="partner_phone"> Phone </label>
            <input type="text" id="partner_phone" value="<% partner.phone %>" name="phone" class="form-control my-2">
        </div>
        <div class="mb-3">
            <label for="partner_module"> Module </label>
            <input type="text" id="partner_module" value="<% partner.module %>" name="module" class="form-control my-2">
        </div>
        <div class="mb-3">
            <label for="partner_active"> Status </label>
            <select class="form-select my-2" name="active" id="partner_active">
                <option <%= partner.active ? 'selected' : '' %> value="true"> Active</option>
                <option <%= partner.active ? '' : 'selected' %> value="false"> Disabled</option>
            </select>
        </div>
        <div class="actions text-end mt-4">
            <a href="/partners" class="btn btn-light"> Back </a>
            <button type="submit" class="btn btn-primary">
                Create
            </button>
        </div>
    </form>
</div>